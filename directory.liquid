---
layout: base
class: directory
title: Directory
---

{% assign alphabet = "ABCDEFGHIJKLMNOPQRSTUVWXYZ" | split: "" %}
<nav class="directory--filters">
    {% for letter in alphabet %}
    <button data-letter={{letter}}>
        {{letter}}
    </button>
    {% endfor %}
</nav>

<button class="close-entry">Close</button>

<section class="directory--nav">
    <ul class='timeline'>
        <li class="subtitle">
            <h2>2015â€“2020</h2>
        </li>
        {% for item in collections.directory_item%}
        {% if item.data.draft != true %}
        <li class="timeline--item directory--item {% if item.data.thumbnail_is_landscape %}thumbnail_landscape{% endif %}"
            data-title="{{item.data.title}}" data-slug="{{item.fileSlug | slug}}">
            <a href="#{{item.fileSlug | slug }}">
                <h3>{{item.data.title}}</h3>
                <h4>{{item.data.subtitle}}</h4>

                {% if item.data.thumbnail %}
                <img class="timeline--item--thumbnail" src="{% img item.data.thumbnail 400%}"
                    alt="{{item.data.title}} Thumbnail" />
                {% endif %}
                <div class='description'>
                    {{item.data.description | renderMarkdown}}
                </div>
            </a>
        </li>
        {% endif %}
        {% endfor %}
    </ul>
</section>
<main class="directory--entry helvetica-copy">
    <div class="directory--entry--inner">

    </div>
</main>